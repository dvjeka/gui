#!/bin/sh /etc/rc.common

# sentinel-core-kvm
# SENTINEL OS KVM Core Service

START=95
STOP=15
USE_PROCD=1

SENTINEL_BIN="/usr/bin/sentinel-core-kvm"
SENTINEL_PID="/var/run/sentinel-core.pid"
SENTINEL_LOG="/var/log/sentinel-core.log"

start_service() {
    procd_open_instance
    procd_set_param command /usr/bin/python3 ${SENTINEL_BIN}
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param pidfile ${SENTINEL_PID}
    procd_set_param limits core="unlimited"
    procd_close_instance
    
    # Включаем KVM оптимизации
    echo 1 > /sys/kernel/mm/ksm/run 2>/dev/null
}

stop_service() {
    killall python3 2>/dev/null
}

service_triggers() {
    procd_add_reload_trigger "sentinel"
}

boot() {
    # Проверка KVM при загрузке
    if systemd-detect-virt | grep -q kvm; then
        logger -t sentinel "✅ Запуск под KVM"
    else
        logger -t sentinel "⚠️ Запуск не под KVM: $(systemd-detect-virt)"
    fi
}